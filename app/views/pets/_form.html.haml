= simple_form_for(@pet) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name
    = f.input :specie
    = f.input :breed
    = f.input :sex
    = f.input :description
    = f.input :location
    = f.input :state
    = f.input :age
    = f.input :size
    = f.input :more_info_url
    = f.input :urgent

  .form-actions
    = f.button :submit
