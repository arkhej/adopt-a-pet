%section
  %fieldset
    = simple_form_for @contact_message, url: contact_path do |f|
      = f.error_notification

      .form-inputs
        = f.input :name
        = f.input :email
        = f.input :subject
        = f.input :body, as: :text, input_html: {rows: 10}

      .form-actions
        = f.button :submit
